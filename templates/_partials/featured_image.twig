{% from '_macros/lib.twig' import img %}

{% if element.featuredImage %}
    {% set image = element.featuredImage.collect.first %}
    {% if image %}
        <figure class="max-w-[2000px] mx-auto my-8">
            {{ img(image, {
                transform: {width: 2000, height: 500},
                srcset: [1580, 1024, 640, 400],
                attr: {loading: null}
            }) }}
        </figure>
    {% endif %}
{% endif %}
