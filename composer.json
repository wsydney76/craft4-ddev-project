{
  "description": "Minimum preconfigured starter",
  "name": "wsydney76/craft_project",
  "version": "2.0.0",
  "license": "Unlicense",
  "require": {
    "craftcms/cms": "3.7.36"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/",
      "config\\": "config/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('config/Env.php') || copy('config/Env.php.example', 'config/Env.php');\""
    ],
    "pre-update-cmd": [
      "@php craft off --retry=30"
    ],
    "post-update-cmd": [
      "@php craft clear-caches/all",
      "@php craft migrate/all",
      "@php craft on"
    ]
  }
}
